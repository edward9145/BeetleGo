<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout
    	android:id="@+id/llGame" 
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent">
    	<!-- GameView here  -->
    </LinearLayout>
    
    <LinearLayout 
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_marginLeft="5dp"
    	android:layout_marginTop ="5dp"
    	android:layout_gravity="top|left">
    	<ImageView
    		android:id="@+id/ivHeart0"
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:src="@drawable/heart"
	    	android:layout_gravity="center"
	    	/>
    	<ImageView
    		android:id="@+id/ivHeart1"
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:src="@drawable/heart"
	    	android:layout_gravity="center"
	    	/>
	    <ImageView
	    	android:id="@+id/ivHeart2"
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:src="@drawable/heart"
	    	android:layout_gravity="center"
	    	/>
	    <ImageView
	    	android:id="@+id/ivHeart3"
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:src="@drawable/heart_none"
	    	android:layout_gravity="center"
	    	/>
	    <ImageView
	    	android:id="@+id/ivHeart4"
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:src="@drawable/heart_none"
	    	android:layout_gravity="center"
	    	/>
    	<!-- <ImageView
	    	android:id="@+id/ivHeart5"
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:src="@drawable/heart_none"
	    	android:layout_gravity="center"
	    	/> -->
	   
	    <ImageView
    		android:id="@+id/ivScore0"
    		android:layout_marginLeft="5dp"
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center"
	    	android:src="@drawable/num0"
	    	/>
    	<ImageView
    		android:id="@+id/ivScore1"
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center"
	    	android:src="@drawable/num0"
	    	/>
	    <ImageView
	    	android:id="@+id/ivScore2"
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center"
	    	android:src="@drawable/num0"
	    	/>
	    <ImageView
	    	android:id="@+id/ivScore3"
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center"
	    	android:src="@drawable/num0"
	    	/>
	    <ImageView
	    	android:id="@+id/ivScore4"
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center"
	    	android:src="@drawable/num0"
	    	/>
	    <ImageView
	    	android:id="@+id/ivScore5"
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center"
	    	android:src="@drawable/num0"
	    	/>
   	</LinearLayout>
    
    <LinearLayout 
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_gravity="top|right">
    	<ImageButton
    		android:id="@+id/ibPlay"
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:src="@drawable/btn_pause"
	    	android:background="#00000000"
	    	android:layout_gravity="center"
	    	android:layout_marginRight="10dp"
	    	android:onClick="play_onclick"
	    	/>
    	<ImageButton
    		android:id="@+id/ibReplay"
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:src="@drawable/btn_replay"
	    	android:background="#00000000"
	    	android:layout_gravity="center"
	    	android:layout_marginRight="10dp"
	    	android:onClick="replay_onclick"
	    	android:visibility="invisible"
	    	/>
   	</LinearLayout>
    
    <LinearLayout 
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_gravity="bottom|left"
    	android:orientation="vertical" >
    	<FrameLayout 
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_gravity="left|bottom"
    		android:layout_marginLeft="10dp"
    		android:layout_marginBottom="5dp" >
    		<ImageView
    			android:id="@+id/ivShield0"
				android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:src="@drawable/shield_n"
		    	android:layout_marginLeft="14dp"
		    	android:layout_marginTop="8dp"
		    	android:visibility="gone"
		    	/>
		    <ImageView
		    	android:id="@+id/ivShield1"
				android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:src="@drawable/shield_n"
		    	android:layout_marginLeft="7dp"
		    	android:layout_marginTop="4dp"
		    	android:visibility="gone"
		    	/>
	    	<ImageButton
	    		android:id="@+id/ibShield"
				android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:src="@drawable/btn_shield"
		    	android:background="#00000000"
		    	android:onClick="shield_onclick"
		    	/>
	    </FrameLayout>
	    
	    <SeekBar 
	    	android:id="@+id/sbStage"
	    	android:layout_width="270dp"
	    	android:layout_height="wrap_content"
	    	android:thumb="@drawable/plane_thumb"
	    	android:progressDrawable="@drawable/plane_seekbar"
	    	android:fadingEdge="horizontal"
	    	android:layout_marginLeft="10dp"
	    	android:layout_marginBottom="5dp"
	    	/>
    </LinearLayout>
    
</FrameLayout>
