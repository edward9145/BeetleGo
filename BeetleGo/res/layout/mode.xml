<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/menu_bg"
    >
    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_gravity="center"
    	android:orientation="vertical"
    	android:layout_marginTop="@dimen/selectmode_mt"
    	android:layout_marginBottom="@dimen/selectmode_mb"
    	>
    	<LinearLayout 
	    	android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:layout_gravity="center"
	    	android:orientation="horizontal"
	    	android:layout_weight="1"
	    	>
		    <ImageButton
				android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
		    	android:layout_weight="1"
		    	android:src="@drawable/btn_normal"
		    	android:background="#00000000"
		    	android:scaleType="fitCenter"
		    	android:onClick="normalMode_onclick"
		    	/>
		    <ImageButton
				android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
		    	android:layout_weight="1.6"
		    	android:scaleType="fitCenter"
		    	android:src="@drawable/normal_thumb"
		    	android:background="#00000000"
		    	android:onClick="normalMode_info"
		    	/>
    	</LinearLayout>
    	
    	<LinearLayout 
	    	android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:layout_gravity="center"
	    	android:orientation="horizontal"
	    	android:layout_weight="1"
	    	>
		    <ImageButton
				android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
		    	android:layout_weight="1.6"
		    	android:background="#00000000"
		    	android:src="@drawable/endless_thumb"
		    	android:scaleType="fitCenter"
		    	android:onClick="endlessMode_info"
		    	/>
		    <ImageButton
				android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
		    	android:layout_weight="1"
		    	android:src="@drawable/btn_endless"
		    	android:background="#00000000"
		    	android:scaleType="fitCenter"
		    	android:onClick="endlessMode_onclick"
		    	/>
    	</LinearLayout>
    	
    </LinearLayout>
    
    
    <ImageButton 
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_margin="@dimen/footer_margin"
    	android:scaleType="fitCenter"
    	android:layout_gravity="bottom|left"
    	android:background="#00000000"
    	android:src="@drawable/btn_back" 
    	android:onClick="back_onclick" />	<!-- android:visibility="gone" -->
     <ImageButton 
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_margin="@dimen/footer_margin"
    	android:scaleType="fitCenter"
    	android:layout_gravity="bottom|right"
    	android:background="#00000000"
    	android:src="@drawable/btn_how"
    	android:onClick="toHow" />
</FrameLayout>
