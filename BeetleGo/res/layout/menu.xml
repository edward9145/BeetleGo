<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/menu_bg"
    >
    
    <ImageButton 
    	android:layout_width="120dp"
    	android:layout_height="60dp"
    	android:src="@drawable/btn_home"
    	android:scaleType="fitCenter"
    	android:background="#00000000"
    	android:layout_gravity="top|left"
    	android:layout_marginTop="5dp"
    	android:layout_marginLeft="5dp"
    	android:onClick="toHome"
    	/>
    	
    <LinearLayout 
    	android:layout_width="200dp"
    	android:layout_height="60dp"
    	android:layout_gravity="right|top"
    	android:gravity="center"
    	android:orientation="horizontal"
    	android:layout_marginRight="30dp"
    	android:layout_marginTop="10dp"
    	>
	    <ImageButton 
	    	android:id="@+id/ibSound"
	    	android:layout_weight="1"
	    	android:layout_width="fill_parent"
	    	android:layout_height="50dp"
	    	android:src="@drawable/btn_soundon"
	    	android:scaleType="fitCenter"
	    	android:background="#00000000"
	    	android:onClick="setSound"
	    	/>
	    <ImageButton 
    		android:id="@+id/ibMusic"
    		android:layout_weight="1"
	    	android:layout_width="fill_parent"
	    	android:layout_height="50dp"
	    	android:src="@drawable/btn_musicon"
	    	android:scaleType="fitCenter"
	    	android:background="#00000000"
	    	android:onClick="setMusic"
	    	/>
	    <ImageButton 
	    	android:id="@+id/ibGravity"
	    	android:layout_weight="1"
	    	android:layout_width="fill_parent"
	    	android:layout_height="50dp"
	    	android:src="@drawable/btn_gravityon"
	    	android:scaleType="fitCenter"
	    	android:background="#00000000"
	    	android:onClick="setGravity"
	    	/>
    </LinearLayout>
    
    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:orientation="horizontal"
    	android:paddingTop="90dp"
    	android:paddingLeft="30dp"
    	android:paddingRight="30dp"
    	android:paddingBottom="10dp"
    	>
	    <LinearLayout 
	    	android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:layout_weight="1"
	    	android:gravity="left"
	    	android:orientation="vertical"
	    	android:paddingRight="5dp"		    	
	    	>
		    <!-- <ImageButton 
		    	android:layout_weight="2"
		    	android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
		    	android:src="@drawable/btn_achi"
		    	android:scaleType="fitStart"
		    	android:background="#00000000"
		    	android:onClick="toAchi"
		    	/> -->
		    <ImageButton 
		    	android:layout_weight="2"
		    	android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
		    	android:src="@drawable/btn_top5"
		    	android:scaleType="fitCenter"
		    	android:background="#00000000"
		    	android:onClick="toTopRank"
		    	/>
		    <ImageButton 
		    	android:layout_weight="2"
		    	android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
		    	android:src="@drawable/btn_reset"
		    	android:scaleType="fitCenter"
		    	android:background="#00000000"
		    	android:onClick="toReset"
		    	/>
		    <!-- <ImageButton 
		    	android:layout_weight="2"
		    	android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
		    	android:src="@drawable/btn_tools"
		    	android:scaleType="fitStart"
		    	android:background="#00000000"
		    	android:onClick="toTools"
		    	/>  -->
    	</LinearLayout>
    	<LinearLayout 
	    	android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:layout_weight="1"
	    	android:paddingLeft="5dp"
	    	android:gravity="left"
	    	android:orientation="vertical"		    	
	    	>
		    
		    <ImageButton 
		    	android:layout_weight="2"
		    	android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
		    	android:src="@drawable/btn_credits"
		    	android:scaleType="fitCenter"
		    	android:background="#00000000"
		    	android:onClick="toCredits"
		    	/>
		    <ImageButton 
		    	android:layout_weight="2"
		    	android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
		    	android:src="@drawable/btn_how"
		    	android:scaleType="fitCenter"
		    	android:background="#00000000"
		    	android:onClick="toHow"
		    	/>
    	</LinearLayout>
    </LinearLayout>
</FrameLayout>
