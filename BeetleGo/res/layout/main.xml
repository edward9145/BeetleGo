<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<ImageButton
		android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:background="@drawable/main"
    	android:onClick="toPlay"
    	/>
    <LinearLayout 
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_gravity="right|bottom"
    	android:gravity="center"
    	android:orientation="horizontal"
    	android:layout_marginRight="10dp"
    	android:layout_marginBottom="10dp"
    	>
	    <ImageButton
	    	android:id="@+id/ibMainSound"
	    	android:layout_width="fill_parent"
	    	android:layout_height="50dp"
	    	android:src="@drawable/btn_soundon"
	    	android:scaleType="fitCenter"
	    	android:background="#00000000"
	    	android:onClick="setSound"
	    	/>
	    <ImageButton
    		android:id="@+id/ibMainMusic"
	    	android:layout_width="fill_parent"
	    	android:layout_height="50dp"
	    	android:src="@drawable/btn_musicon"
	    	android:scaleType="fitCenter"
	    	android:background="#00000000"
	    	android:onClick="setMusic"
	    	/>
	    <ImageButton
	    	android:id="@+id/ibMainHelp"
	    	android:layout_width="fill_parent"
	    	android:layout_height="50dp"
	    	android:src="@drawable/btn_help"
	    	android:scaleType="fitCenter"
	    	android:background="#00000000"
	    	android:onClick="toHelp"
	    	/>
	    <ImageButton 
	    	android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:src="@drawable/btn_score"
	    	android:scaleType="fitCenter"
	    	android:background="#00000000"
	    	android:onClick="toScore"
	    	/>
	</LinearLayout>
	
    <ImageButton 
    	android:layout_width="120dp"
    	android:layout_height="60dp"
    	android:src="@drawable/btn_menu"
    	android:scaleType="fitCenter"
    	android:background="#00000000"
    	android:layout_gravity="bottom|right"
    	android:layout_marginRight="8dp"
    	android:layout_marginBottom="8dp"
    	android:onClick="toMenu"
    	android:visibility="gone"
    	/>
    	
    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:orientation="horizontal"
    	android:gravity="center">
   		<ImageView
		    android:id="@+id/ivPlane"
		    android:src="@drawable/plane_anim0"
	    	android:layout_width="130dp"
	    	android:layout_height="127dp"
	    	android:layout_marginRight="300dp"
	    	android:layout_marginTop="35dp"
	    	android:padding="5dp"
	    	/>
    </LinearLayout>
</FrameLayout>
