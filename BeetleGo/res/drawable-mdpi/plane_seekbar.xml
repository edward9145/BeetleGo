<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:id="@android:id/background">
		<shape>
			<corners android:radius="2dip" />
			<gradient android:startColor="#ffffffff"
				android:centerColor="#50000000" android:endColor="#50808A87"
				android:centerY="0.45" android:angle="270" />
			<padding android:padding="5dp"/>
		</shape>
	</item>

	<item android:id="@android:id/progress">
		<clip>
			<shape>
				<corners android:radius="5dip" />
				<gradient android:startColor="#ffffffff"
					android:centerColor="#60FFFF00" android:endColor="#60AABD00"
					android:centerY="0.45" android:angle="270" />
				<padding android:padding="5dp"/>
			</shape>
		</clip>
	</item>
</layer-list>  